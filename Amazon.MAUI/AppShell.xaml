<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Amazon.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Amazon.MAUI"
    xmlns:views="clr-namespace:Amazon.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Amazon.MAUI">

    <ShellContent
        Title="Welcome to Assignment 2!"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory"/>

    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShoppingView}"
        Route="Shop"/>

    <ShellContent
        Title="Create an Item"
        ContentTemplate="{DataTemplate views:ItemView}"
        Route="ItemView"/>

</Shell>
